<div class="four wide column"></div>

<div class="eight wide column">
  <h2 class="ui centered header">Forgot your password?</h2>

  <%= render "shared/devisemes" %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui form" }) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "ui red button" %>
    </div>
  <% end %>
  <div class="ui list">
    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="four wide column"></div>

